<!DOCTYPE html>
<html lang="en_US">

<head>
    <% include partials/nmdb-head %>
    <link href="dist/lib/jquery.filer/css/jquery.filer.css" type="text/css" rel="stylesheet" />
    <link href="dist/lib/jquery.filer/css/themes/jquery.filer-dragdropbox-theme.css?v=1.2" type="text/css" rel="stylesheet" />
</head>
<body>
    <div id="wrapper">
        <% include partials/nmdb-nav %>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header"><i class="fa fa-area-chart fa-fw"></i> Nmon Charts</h1>
                </div> <!-- /.col-lg-12 -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-bar-chart-o fa-fw"></i> Nmon data file upload
                            <div class="pull-right">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                        Actions
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu pull-right" role="menu">
                                        <li><a href="#">Action</a></li>
                                        <li><a href="#">Another action</a></li>
                                        <li><a href="#">Something else here</a></li>
                                        <li class="divider"></li>
                                        <li><a href="#">Separated link</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <b>Nmon data file upload: </b>
                            <br><br>
                            <!-- action is manipulated by jquery.filer -->
                            <form action="process-nmon-data-files" method="post" enctype="multipart/form-data" class="text-center">
                                <input type="file" name="nmon-data-files[]" id="nmon-upload-files" multiple="multiple">
                                <input type="submit" class="btn-custom green" value="Process uploaded NMON files...">
                            </form>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- nmon-db-client.js -->
    <% include partials/nmdb-footer %>
    <script src="dist/js/nmon-db-client.js"></script>
    <script src="dist/js/nmon-data-files-upload.js"></script>
</body>
</html>
