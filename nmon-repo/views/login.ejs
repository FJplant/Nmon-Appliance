<!DOCTYPE html>
<!-- views/login.ejs -->
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="/bower_components/font-awesome/css/font-awesome.min.css"> <!-- load fontawesome -->
	<style>
		body 		{ padding-top:40px; }
	</style>
</head>
<body>
<div class="container">

    <div class="col-sm-6 col-sm-offset-3">
        <a href="/"><img src="dist/images/nmio-logo.png"></a>
        <p>&nbsp;</p>
	<h1><span class="fa fa-sign-in"></span> Login</h1>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form action="/nmon-db/v1/login" method="post">
            <fieldset>
		<div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" placeholder="'nmdb' for demo" name="email" autofocus>
		</div>
		<div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="'demo' for demo" name="password" value="">
		</div>
                <!-- remember me checkbox -->
                <!-- TODO: determine whether to use. not so good for design
		<div "form-group">
                    <label>
                        <input name="remember" type="checkbox" value="Remember Me"> Remember me
                    </label>
		</div>
                -->

		<button type="submit" class="btn btn-warning btn-lg">Login</button>
            </fieldset>
	</form>

	<hr>

	<p>Need an account? please <a href="/nmon-db/v1/signup"> Signup</a></p>
	<p>Or go <a href="/">home</a>.</p>

    </div>

</div>
</body>
</html>
