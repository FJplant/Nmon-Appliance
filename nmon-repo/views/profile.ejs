<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/nmdb-head %>
</head>

<body>

    <div id="wrapper">
        <% include partials/nmdb-nav %>

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header"><span class="fa fa-user"></span> Profile Page</h1>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <div class="row">
                    <!-- LOCAL INFORMATION -->
                    <div class="col-sm-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3><span class="fa fa-home"></span> Local</h3>
                            </div>
                            <div class="panel-body">
                               <p>
                                   <strong>id</strong>: <%= user._id %><br>
                                   <strong>email</strong>: <%= user.local.email %><br>
                                   <strong>password</strong>: <%= user.local.password %>
                               </p>
                            </div>
                         </div>
                    </div>
                </div>

                <div class="row">
                    <!-- FACEBOOK INFORMATION -->
                    <div class="col-sm-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>
                            </div>
                            <div class="panel-body">
                            <p>
                                <strong>id</strong>: <%= user.facebook.id %><br>
                                <strong>token</strong>: <%= user.facebook.token %><br>
                                <strong>email</strong>: <%= user.facebook.email %><br>
                                <strong>name</strong>: <%= user.facebook.name %>
                            </p>
                            </div>
                        </div>
                    </div>
                    <!-- /.col-lg-4 -->

                    <!-- GOOGLE INFORMATION -->
                    <div class="col-sm-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="text-primary"><span class="fa fa-google"></span> Google</h3>
                            </div>
                            <div class="panel-body">
                            <p>
                                <strong>id</strong>: <%= user.facebook.id %><br>
                                <strong>token</strong>: <%= user.facebook.token %><br>
                                <strong>email</strong>: <%= user.facebook.email %><br>
                                <strong>name</strong>: <%= user.facebook.name %>
                            </p>
                            </div>
                        </div>
                    </div>
                    <!-- /.col-lg-4 -->

                    <!-- TWITTER INFORMATION -->
                    <div class="col-sm-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="text-primary"><span class="fa fa-twitter"></span> Twitter</h3>
                            </div>
                            <div class="panel-body">
                            <p>
                                <strong>id</strong>: <%= user.facebook.id %><br>
                                <strong>token</strong>: <%= user.facebook.token %><br>
                                <strong>email</strong>: <%= user.facebook.email %><br>
                                <strong>name</strong>: <%= user.facebook.name %>
                            </p>
                            </div>
                        </div>
                    </div>
                    <!-- /.col-lg-4 -->
                </div>
                <!-- /.row -->
                <div class="row">
                    <div class="col-lg-12">
                        <a href="/nmon-db/v1/logout" class="btn btn-default btn-sm">Logout</a>
                    </div>
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
    <% include partials/nmdb-footer %>
</body>

</html>
